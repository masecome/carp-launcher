{
  "name": "carp-launcher",
  "version": "1.0.1",
  "description": "CARP Roleplay Launcher",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "author": "CARP Roleplay",
  "repository": {
    "type": "git",
    "url": "https://github.com/masecome/carp-launcher.git"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "discord-rpc": "^4.0.0",
    "electron-updater": "^6.1.0" 
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.0"
  },
  "build": {
    "appId": "com.carproleplay.launcher",
    "productName": "CARP Launcher",
    "publish": [
      {
        "provider": "github",
        "owner": "masecome",
        "repo": "carp-launcher"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "logo.ico"
    },
    "nsis": {
      "oneClick": false,
      "createDesktopShortcut": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
